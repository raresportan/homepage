---
const { id, className, wave1X, wave2X, wave3X, wave4X } = Astro.props;
---

<div aria-hidden="true" class={`waves-container ${className || ""}`}>
    <svg
        class="waves"
        viewBox="0 24 150 28"
        preserveAspectRatio="none"
        shapeRendering="auto"
    >
        <defs>
            <path
                id={id}
                d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
            ></path>
        </defs>
        <g class="parallax">
            <use href={`#${id}`} class="wave1" x={wave1X} y="0"></use>
            <use href={`#${id}`} class="wave2" x={wave2X} y="3"></use>
            <use href={`#${id}`} class="wave3" x={wave3X} y="5"></use>
            <use href={`#${id}`} class="wave4" x={wave4X} y="7"></use>
        </g>
    </svg>
</div>
